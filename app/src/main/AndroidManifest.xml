<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.itu.monalimodi.moviereview" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".BoxOfficeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BoxOfficeDetailActivity"
            android:label="@string/title_activity_box_office_detail" >
        </activity>
        <activity
            android:name=".ListMoviesActivity"
            android:label="@string/title_activity_list_movies" >
        </activity>
        <activity
            android:name=".ReviewsActivity"
            android:label="@string/title_activity_reviews" >
        </activity>
    </application>

</manifest>
